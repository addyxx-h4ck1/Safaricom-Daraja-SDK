{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generates declaration files (.d.ts)
    "sourceMap": true, // Generates source maps for easier debugging
    "outDir": "./build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
